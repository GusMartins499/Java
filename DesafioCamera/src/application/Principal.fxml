<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PrincipalController">
   <bottom>
      <HBox alignment="CENTER">
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <Button fx:id="button" alignment="CENTER" onAction="#startCamera" text="Star Camera" />
         </children>
      </HBox>
   </bottom>
   <center>
      <ImageView fx:id="currentFrame" />
   </center>
   <right>
      <VBox alignment="CENTER_LEFT" spacing="10.0">
         <padding>
            <Insets left="10.0" right="20.0" />
         </padding>
         <children>
            <ImageView fx:id="histograma" />
            <Text text="Controls" />
            <CheckBox fx:id="grayscale" text="Show in gray scale" />
         </children>
      </VBox>
   </right>
</BorderPane>
